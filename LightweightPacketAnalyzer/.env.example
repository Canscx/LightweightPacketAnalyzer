# 网络流量统计系统配置文件示例
# 复制此文件为 .env 并根据需要修改配置

# 数据包捕获配置
CAPTURE_INTERFACE=auto
CAPTURE_TIMEOUT=30
CAPTURE_PACKET_COUNT=1000

# 数据存储配置
DATA_DIRECTORY=./data
DATABASE_FILE=traffic_data.db
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600

# GUI配置
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800
THEME=default
LANGUAGE=zh_CN

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/network_analyzer.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# 性能配置
MAX_MEMORY_USAGE=512MB
PROCESSING_THREADS=4
BUFFER_SIZE=1024

# 安全配置
REQUIRE_ADMIN=true
ALLOW_PROMISCUOUS_MODE=false

# 开发配置
DEBUG_MODE=false
PROFILING_ENABLED=false